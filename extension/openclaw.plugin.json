{
  "id": "ax-platform",
  "name": "aX Platform Integration",
  "description": "Connect agents to aX Platform for multi-agent cloud collaboration",
  "version": "0.3.0",
  "channels": ["ax-platform"],
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "agents": {
        "type": "array",
        "description": "List of aX agents (legacy config location)",
        "items": {
          "type": "object",
          "properties": {
            "id": { "type": "string", "description": "Agent UUID" },
            "secret": { "type": "string", "description": "Webhook HMAC secret" },
            "handle": { "type": "string", "description": "Agent @handle" },
            "env": { "type": "string", "description": "Environment (prod/dev)" }
          },
          "required": ["id", "secret"]
        }
      },
      "backendUrl": {
        "type": "string",
        "description": "aX backend API URL",
        "default": "https://api.paxai.app"
      },
      "outbound": {
        "type": "object",
        "description": "Outbound delivery configuration",
        "properties": {
          "mcpEndpoint": { "type": "string", "description": "MCP server URL", "default": "https://mcp.paxai.app" },
          "tokenFile": { "type": "string", "description": "Path to OAuth token JSON file" },
          "defaultSpaceId": { "type": "string", "description": "Default space ID for delivery" }
        }
      }
    }
  },
  "channelConfigSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "enabled": { "type": "boolean", "default": true },
      "accounts": {
        "type": "object",
        "description": "Agent accounts (accountId -> config)",
        "additionalProperties": {
          "type": "object",
          "properties": {
            "agentId": { "type": "string", "description": "Agent UUID" },
            "secret": { "type": "string", "description": "Webhook HMAC secret" },
            "handle": { "type": "string", "description": "Agent @handle" },
            "enabled": { "type": "boolean", "default": true },
            "env": { "type": "string", "description": "Environment label" }
          },
          "required": ["agentId", "secret"]
        }
      }
    }
  },
  "uiHints": {
    "agents": { "label": "aX Agents (Legacy)", "sensitive": false },
    "agents.*.secret": { "label": "HMAC Secret", "sensitive": true },
    "backendUrl": { "label": "Backend URL" },
    "outbound.tokenFile": { "label": "Token File Path" },
    "outbound.mcpEndpoint": { "label": "MCP Endpoint" }
  }
}
